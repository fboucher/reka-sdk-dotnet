<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <RootNamespace>Reka.SDK</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- NuGet Package Metadata -->
    <PackageId>Reka.SDK</PackageId>
    <Version>0.1.1</Version>
    <Authors>Frank Boucher (fboucher), Reka</Authors>
    <Company>Reka</Company>
    <Description>Official .NET SDK for Reka AI API - A SDK for integrating Reka's AI APIs into your .NET applications.</Description>
    <PackageTags>reka;ai;sdk;dotnet;api;vision;research;chat</PackageTags>
    <RepositoryUrl>https://github.com/reka-ai/reka-sdk-dotnet</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageProjectUrl>https://reka.ai</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

</Project>
